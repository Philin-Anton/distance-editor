{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "lib": ["es6", "dom"],
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "baseUrl": "./src",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "exclude": [
        "node_modules",
        "typings",
        "**/*.spec.ts?",
        "dist"
    ],
    "compileOnSave": true,
    "filesGlob": [
        "./src/*.tsx",
        "./src/*.ts"
    ]
}